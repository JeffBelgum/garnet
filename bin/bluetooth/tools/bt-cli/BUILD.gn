  output_name = "bt-cli"

  sources = [
    "app.cc",
    "app.h",
    "commands.cc",
    "commands.h",
    "helpers.cc",
    "helpers.h",
    "logging.cc",
    "logging.h",
    "main.cc",
  ]

  deps = [
    "//garnet/bin/bluetooth/tools/lib",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/bluetooth/fidl",
    "//garnet/public/lib/fxl",
    "//zircon/public/lib/async",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/linenoise",
  ]
}
