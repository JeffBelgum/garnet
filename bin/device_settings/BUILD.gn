import("//build/rust/rustc_binary.gni")
import("//build/package.gni")

rustc_binary("bin") {
  name = "device_settings_manager"
  with_unit_tests = true

  deps = [
    "//garnet/public/lib/fidl/rust/fidl:fidl-rustc",
    "//garnet/public/lib/device_settings/fidl:fidl-rustc",
    "//garnet/public/rust/crates/fdio:fdio-rustc",
    "//garnet/public/rust/crates/fuchsia-app:fuchsia-app-rustc",
    "//garnet/public/rust/crates/fuchsia-async:fuchsia-async-rustc",
    "//garnet/public/rust/crates/fuchsia-syslog:fuchsia-syslog-rustc",
    "//garnet/public/rust/crates/fuchsia-zircon:fuchsia-zircon-rustc",
    "//garnet/public/rust/crates/mxruntime:mxruntime-rustc",
    "//garnet/public/rust/crates/mxruntime/mxruntime-sys:mxruntime-sys-rustc",
    "//third_party/rust-crates/rustc_deps:bytes",
    "//third_party/rust-crates/rustc_deps:failure",
    "//third_party/rust-crates/rustc_deps:futures",
    "//third_party/rust-crates/rustc_deps:parking_lot",
    "//third_party/rust-crates/rustc_deps:tempdir",
  ]
}

package("device_settings_manager") {
  deps = [
    ":bin",
  ]

  binary = "rust_crates/device_settings_manager"

  meta = [
    {
      path = rebase_path("meta/sandbox")
      dest = "sandbox"
    },
    {
      path = rebase_path("//garnet/bin/appmgr/legacy_flat_exported_dir")
      dest = "legacy_flat_exported_dir"
    },
  ]
}

package("device_settings_manager_tests") {
  deprecated_system_image = true
  testonly = true

  deps = [
    ":bin",
  ]

  tests = [
    {
      name = "device_settings_manager_bin_test_rustc"
    },
  ]
}
