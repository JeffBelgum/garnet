import("//build/rust/rustc_binary.gni")
import("//build/package.gni")

rustc_binary("bin") {
  name = "wlanstack2"
  with_unit_tests = true

  deps = [
    "//garnet/lib/rust/crates/fuchsia-wlan-dev",
    "//garnet/lib/rust/crates/wlan-sme",
    "//garnet/lib/wlan/fidl:fidl-rustc",
    "//garnet/lib/wlan/fidl:service-rustc",
    "//garnet/public/lib/fidl/rust/fidl:fidl-rustc",
    "//garnet/public/rust/crates/fuchsia-app:fuchsia-app-rustc",
    "//garnet/public/rust/crates/fuchsia-async:fuchsia-async-rustc",
    "//garnet/public/rust/crates/fuchsia-vfs/fuchsia-vfs-watcher:fuchsia-vfs-watcher-rustc",
    "//garnet/public/rust/crates/fuchsia-zircon:fuchsia-zircon-rustc",
    "//third_party/rust-crates/rustc_deps:failure",
    "//third_party/rust-crates/rustc_deps:futures",
    "//third_party/rust-crates/rustc_deps:log",
    "//third_party/rust-crates/rustc_deps:parking_lot",
  ]
}

package("wlanstack2") {

  deps = [
    ":bin",
  ]

  binary = "rust_crates/wlanstack2"

  meta = [{
    path = rebase_path("meta/sandbox")
    dest = "sandbox"
  }, {
    path = rebase_path("//garnet/bin/appmgr/legacy_flat_exported_dir")
    dest = "legacy_flat_exported_dir"
  }]
}
