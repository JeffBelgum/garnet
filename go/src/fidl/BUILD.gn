import("//build/go/go_binary.gni")
import("//build/host.gni")

go_binary("fidl_backend_bin") {
  gopackage = "fidl/compiler/backend"
  output_name = "fidl_backend"

  go_dependencies = [
    {
      package = "fidl"
    },
  ]
}

install_host_tools("fidl_backend") {
  deps = [
    ":fidl_backend_bin",
  ]
  outputs = [
    "fidl_backend",
  ]
}
